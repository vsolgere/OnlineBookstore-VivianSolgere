@model IEnumerable<OnlineBookstore_VivianSolgere.Models.Book>

@{
    ViewBag.Title = "Home Page";
}

<h2>Book List</h2>

<div class="container mt-4">
    <div class="border p-3" style="background-color: #f8f9fa;">
        @foreach (var book in Model)
        {
            <div class="row border-bottom py-3">
                <div class="col-12">
                    <h4 class="mb-1">
                        @book.Title
                        <span class="badge rounded-pill bg-info text-dark float-end">@book.Category</span>
                    </h4>
                    <p class="mb-1"><strong>@book.Author</strong></p>
                    <p class="mb-1"><em>@book.Publisher</em>, ISBN: @book.Isbn</p>
                    <p class="mb-1">@book.Classification, @book.PageCount pages</p>
                    <p class="mb-1"><span class="fw-bold text-success">@book.Price.ToString("C")</span></p>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        @for (int i = 0; i < ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNum = i })">@((i + 1).ToString())</a>
            </li>
        }
    </ul>
</nav>
